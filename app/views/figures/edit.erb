<h1>Update Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"><br><br>

  <label>Choose an existing Landmark:</label><br>
<% Landmark.all.each do |landmark| %>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= 'checked' if @figure.landmarks.include?(landmark) %><%= landmark.name %>
<% end %>

<br><br>

<label>Or, create a New Landmark:</label><br>
<input type="text" name="landmark[name]" id="new_landmark" value="New Landmark">

<br><br>

<label>Choose an Existing Title:</label><br>
<% Title.all.each do |title| %>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= 'checked' if @figure.titles.include?(title) %><%= title.name %>
<% end %>

<br><br>

<label>Or, create a New Title:</label>
<input type="text" name="title[name]" id="new_title" value="New Title"><br>

<input type="submit" value="Edit Figure">


</form>
